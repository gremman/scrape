{{> navs/saved}}

<div id="articles">
    {{#if articles}}
        {{#each articles}}
            <div class="well">
                <div class="row">
                    <div class="col col-md-8">
                        <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                    </div>
                    <div class="col col-md-2">
                        <a class="btn btn-primary active btn-lg" href="#" data-toggle="modal" data-target="#{{this.id}}">Comments</a>
                    </div>
                    <div class="col col-md-2">
                        <form class="form-inline" action="/api/articles/{{this.id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger active btn-lg">Delete</button>
                        </form>
                    </div>
                </div>
            </div>

            {{> content/modal}}
            
        {{/each}}
    {{else}}
        <div class="well">
            <h4>There are no saved articles.</h4>
        </div>
    {{/if}}
</div>
